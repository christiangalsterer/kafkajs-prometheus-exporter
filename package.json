{
  "name": "@christiangalsterer/kafkajs-prometheus-exporter",
  "version": "3.2.1",
  "description": "A prometheus exporter for kafkajs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/christiangalsterer/kafkajs-prometheus-exporter.git"
  },
  "files": [
    "/dist/src"
  ],
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "ci": "pnpm i --prod=false && pnpm run format && pnpm run lint && pnpm run build && pnpm run test && pnpm run renovate:config",
    "clean": "pnpm run clean:dist && pnpm run clean:deps",
    "clean:dist": "rm -rf ./dist",
    "clean:deps": "rm -rf ./node_modules && pnpm run deps",
    "deps": "pnpm i --prod=false && pnpm audit fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --forceExit --verbose",
    "test:coverage": "jest --forceExit --coverage --verbose",
    "release:prepare": "pnpm run clean && pnpm i && pnpm i --prod=false && pnpm run format && pnpm run lint && pnpm run build && pnpm run test",
    "release:major": "pnpm run release:prepare && pnpm version major -m 'build(release): release %s' && git push && git push --tags",
    "release:minor": "pnpm run release:prepare && pnpm version minor -m 'build(release): release %s' && git push && git push --tags",
    "release:patch": "pnpm run release:prepare && pnpm version patch -m 'build(release): release %s' && git push && git push --tags",
    "publish-npm": "pnpm run ci && pnpm publish --access=public",
    "publish-npm:dry-run": "pnpm run ci && pnpm publish --access=public --dry-run",
    "renovate:config": "npx renovate-config-validator"
  },
  "keywords": [
    "kafkajs",
    "kafka",
    "prometheus",
    "monitoring",
    "metrics",
    "kafkajs prometheus",
    "kafkajs monitoring",
    "kafkajs metrics",
    "kafka prometheus",
    "kafka monitoring",
    "kafka metrics"
  ],
  "author": "Christian Galsterer",
  "license": "MIT",
  "dependencies": {
    "kafkajs": "^2.2.4",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@jest/globals": "30.2.0",
    "@testcontainers/kafka": "11.10.0",
    "@types/jest": "30.0.0",
    "eslint": "9.39.1",
    "eslint-config-love": "145.0.0",
    "eslint-plugin-jest": "29.5.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "jest": "30.2.0",
    "prettier": "3.7.4",
    "renovate": "42.64.1",
    "ts-jest": "29.4.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.49.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=10"
  },
  "bugs": {
    "url": "https://github.com/christiangalsterer/kafkajs-prometheus-exporter/issues"
  },
  "homepage": "https://github.com/christiangalsterer/kafkajs-prometheus-exporter#readme",
  "directories": {
    "test": "test"
  }
}
